<%- include('./partials/header') %>

<body>
  <%- include('./partials/navbar')%>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label for="titulo">Título</label>
          <input
            type="text"
            placeholder="Título"
            class="form-control"
            name="titulo"
          /><br />

          <label for="Desc">Descrição</label>
          <textarea
            placeholder="Descreva sua pergunta aqui"
            class="form-control"
            name="descricao"
          ></textarea
          ><br />

          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
