<%-include('partials/header')%>
<body>
  <%-include('partials/navbar')%>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <h1 class="pergunta-titulo"><%=pergunta.titulo%></h1>
        <p class="pergunta-desc"><%=pergunta.descricao%></p>
        <form method="POST" action="/responder">
          <h4 class="pergunta-titulo">Responda</h4>
          <textarea
            placeholder="Digite sua resposta"
            class="form-control"
            name="corpo"
          ></textarea>
          <br />
          <input type="hidden" name="perguntas" value="<%=pergunta.id%>" />
          <button type="submit" class="btn btn-primary">Responder</button>
        </form>
      </div>
    </div>
    <br />
    <h1 class="pergunta-titulo">Respostas</h1>
    <%respostas.forEach(resposta=>{%>
    <div class="card">
      <div class="card-body">
        <div class="user">
          <img
            src="https://learn-attachment.microsoft.com/api/attachments/6061bd47-2818-4f2b-b04a-5a9ddb6f6467?platform=QnA"
            alt=""
          />
          <div class="content">
            <h3 class="user-name">An√¥nimo</h3>
            <p class="pergunta-d"><%=resposta.corpo%></p>
          </div>
        </div>
      </div>
    </div>
    <br />
    <%});%>
  </div>
</body>
<%-include('partials/footer')%>
